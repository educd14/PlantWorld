<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enfermedades">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="417dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:text="@string/plant_world"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoenf1"
        android:layout_width="331dp"
        android:layout_height="88dp"
        android:text="¿Crees que tu planta está enferma?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:typeface="normal"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <TextView
        android:id="@+id/textoenf2"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_marginTop="104dp"
        android:text="¡Comprobémoslo!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:typeface="normal"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <Button
        android:id="@+id/btngaleria2"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/gallery4"
        app:layout_constraintEnd_toStartOf="@+id/btncamera2"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoenf2" />

    <Button
        android:id="@+id/btncamera2"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="@drawable/camera4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoenf2" />

</androidx.constraintlayout.widget.ConstraintLayout>